---
// import { Icon } from "astro-icon/components";
import HamburgerButton from "@components/HamburgerButton.astro";
---

<footer class="org-footer" id="bottom">
    <p>Copyright © 2025 • nils hendriks</p>
    <HamburgerButton />
</footer>
<style>
    footer.org-footer {
        text-align: center;
        padding: 1rem 0;
        background-color: var(--color-background-body);
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        width: calc(100% - 3rem);
        margin-inline: auto;
    }

    footer.org-footer p {
        margin: 0;
        padding: 0;
        font-size: 0.875em;
        font-weight: 300;
    }

    #btn-mobile {
        display: flex;
        padding: 0;
        appearance: none;
        border: 0;
        background: none;
    }

    @media only screen and (min-width: 768px) {
        #btn-mobile {
            display: none;
        }
    }
</style>
