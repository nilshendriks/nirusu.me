    <style>
        .masthead {
            background-color: #f8f8f8;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: calc(100% - 48px);
            margin-inline: auto;
        }

        .masthead__logo {
            font-size: 48px;
            text-transform: uppercase;
            font-weight: 600;
            color: var(--color-brand-primary, #000);
            letter-spacing: 0.1em;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        @supports (color: hsl(from var(--color-brand-primary) h s l / 0.5)) {
            .masthead__logo {
                color: hsl(from var(--color-brand-primary) h s l / 0.5);
            }
        }

        .masthead__logo:hover {
            text-decoration: none;
            color: var(--color-brand-primary, #000);
            letter-spacing: 0.2em;
        }

        @supports (color: hsl(from var(--color-brand-primary) h s l / 0.5)) {
            .masthead__logo:hover {
                color: hsl(from var(--color-brand-primary) h s l / 1);
            }
        }

        .masthead__nav {
            flex: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
            padding: 4rem 2rem;
        }

        .masthead__nav a,
        .masthead__nav summary {
            text-decoration: none;
            font-family: var(--font-family-sans-light);
            font-weight: 300;
            text-transform: uppercase;
            /* 12px */
            font-size: 32px;
            line-height: 64px;
            letter-spacing: 0.2em;
            transition: color 0.3s ease;
        }

        .masthead__nav a:hover,
        .masthead__nav details > summary:hover {
            /* color: var(--color-link-hover); */
            /*text-indent: 1rem;*/
        }

        .masthead__nav details {
            /* padding for the content to show */
            /* padding: 1rem; */
            /* non-standard! sets bgc on top to transparent, otherwise a flash */
            -webkit-tap-highlight-color: transparent;
        }

        .masthead__nav summary:focus {
            outline: 0;
        }

        .masthead__nav details > summary {
            list-style: none;
            display: flex;
            /*justify-content: space-between;*/
            justify-content: flex-start;
            align-items: flex-start;
            gap: 8px;
            /*border-bottom: 1px solid #bbb;*/
            cursor: pointer;
        }

        .masthead__nav summary::-webkit-details-marker {
            display: none;
        }

        .masthead__nav summary::after {
            content: "+";
        }
        .masthead__nav details[open] summary:after {
            content: "â€“";
        }

        .masthead__nav nav {
            display: flex;
            flex-direction: column;
        }

        .masthead__nav details nav a {
            font-size: 18px;
            text-transform: capitalize;
            letter-spacing: 0.1em;
            line-height: 48px;
        }
    </style>
</header>
