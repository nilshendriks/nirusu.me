---
// Supports weights 100-900
import "@fontsource-variable/jost";
import "../styles/main.css";
import TheHeader from "../components/TheHeader.astro";
import TheFooter from "../components/TheFooter.astro";
import { ClientRouter, fade, slide } from "astro:transitions";
// import SideBar from "../components/SideBar.astro";

// const { siteTitle } = Astro.props;
// const { siteTitleClass } = Astro.props;
const { pageTitle } = Astro.props;
// const { pageTitleClass } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, viewport-fit=cover"
        />
        <meta
            name="description"
            content="nirusu is a Amsterdam based portrait and event photographer"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <ClientRouter />
    </head>
    <body>
        <div class="wrapper">
            <TheHeader />
            <main class="main-content">
                <slot />
            </main>
            <TheFooter />
        </div>
    </body>
</html>
