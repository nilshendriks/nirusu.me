---
import { Icon } from "astro-icon/components";

interface Props {
    href?: string;
}

const { href = "#menuopen" } = Astro.props;
---

<a
    id="btn-menu"
    class="menu-button"
    href={href}
    aria-label="Menu button"
    title="Open menu"
>
    <Icon name="hamburger" aria-hidden="true" width={44} height={44} />
</a>
<style>
    #btn-menu {
        display: flex;
        padding: 0;
        appearance: none;
        border: 0;
        background: none;
    }
</style>
